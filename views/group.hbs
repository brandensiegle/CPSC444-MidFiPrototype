<head>
<title>Groups</title>

<link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

</head>

<body>

<!--
	Top Navigation Bar
-->
<header class="navbar-default">
<div id="divContainer" class="container">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div id="divContainer" class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbarContent">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-left" href="#">
                    <img alt="Brand" src="https://s-media-cache-ak0.pinimg.com/avatars/aylishabutler-1428656284_30.jpg">

                </a>
            </div>
            <div id="navbarContent" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Settings</a></li>
                    <li role="presentation"><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<!--
	Group Progress
-->


<div class="panel panel-info">
	<div class="panel-heading">
    Group Progress
    </div>
    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar"
             aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
            60%
        </div>
    </div>
  	<div class="panel-body" style="text-align: center">

  		<span class="badge">{{groupTotal}}</span>
  		/
    	<span class="badge">{{groupGoal}} Steps</span>

    </div>
    <div>
    <ul class="nav nav-pills navbar-form">
        <li role="presentation" class="active"><a href="/addData">Update Steps</a></li>
    </ul>
    </div>
</div>

<!--
	List of user steps
-->

<ul class="list-group">
	{{#each members}}
	<li class="list-group-item">
		<span class="badge"> Steps {{this.steps}}</span>
		<span class="glyphicon glyphicon-arrow-up"></span>   {{this.username}}
	</li>
	{{/each}}
</ul>

<!-- 
	Bottom Bar
 -->

<nav class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Profile</a></li>
            <li><a href="/group">My Squads</a></li>
            <li><a href="#">Challenges</a></li>
            <li><a href="/groupranking">Leaderboard</a></li>

        </ul>
    </div>
</nav>


</body>
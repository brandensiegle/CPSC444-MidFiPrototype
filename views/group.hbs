<!doctype html>

<html>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="The Jaguar Squad">
	<title>SquadGoals/Group</title>
	
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

	<!--JQuery-->
	<script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

	<script type="public/javascripts" src="customjquery.js"></script>
</head>

<body>
	<div class="container">
		<img src="/images/logo.jpg" class="img-responsive center-block"></img>
	</div>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li class="active"><a href="#">Progress<span class="sr-only">(current)</span></a></li>
					<li role="presentation"><a href="#">My Profile</a></li>
					<li role="presentation"><a href="/group">My Squads</a></li>
					<li role="presentation"><a href="#">Challenges</a></li>
					<li role="presentation"><a href="/groupranking">Ranking</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li role="presentation"><a href="/logout">Logout</a></li>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>

	<h1>My Daily Progress</h1>
	<div class="progress">
		<div id="myprogress" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
			60%
		</div>
	</div>

	<a href="/addData">Update Steps</a>

	<h1>{Squad Name} Progress</h1>
	<div class="progress">
		<div id="squadprogress" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
			{{groupTotal}}/{{groupGoal}} Steps
		</div>
	</div>


	<div class="progress">
		<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
			<span class="sr-only">40% Complete (success)</span>
		</div>
	</div>
	<div class="progress">
		<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
			<span class="sr-only">20% Complete</span>
		</div>
	</div>
	<div class="progress">
		<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
			<span class="sr-only">60% Complete (warning)</span>
		</div>
	</div>
	<div class="progress">
		<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
			<span class="sr-only">80% Complete (danger)</span>
		</div>
	</div>

	<!--List of user steps-->
	<ul class="list-group">
		{{#each members}}
		<li class="list-group-item">
			<span class="badge"> Steps {{this.steps}}</span>
			<span class="glyphicon glyphicon-arrow-up"></span>   {{this.username}}
		</li>
		{{/each}}
	</ul>

	<!--Top Navigation Bar-->
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<ul class="nav nav-pills navbar-left">
				<li role="brand" class="active"><img src="/images/logogreen.png"></img></li>
			</ul>
			<ul class="nav nav-pills navbar-right">
				<li role="presentation" class="active"><a href="/logout">Logout</a></li>
				<li role="presentation" class="active"><a href="/addData">Add Data</a></li>
			</ul>
		</div>
	</nav>

	<!--Group Progress-->
	<div class="panel panel-info">
		<div class="panel-heading">
			Group Progress
		</div>
		<div class="panel-body">
			<span class="badge">{{groupTotal}}</span>
			/
			<span class="badge">{{groupGoal}} Steps</span>
		</div>
	</div>

	<!--Bottom Bar-->

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<ul class="nav nav-pills">
				<li role="presentation" class="active"><a href="#">Profile</a></li>
				<li role="presentation" class="active"><a href="/group">My Squad</a></li>
				<li role="presentation" class="active"><a href="#">Dashboard</a></li>
				<li role="presentation" class="active"><a href="/groupranking">Squad Rank</a></li>
				<li role="presentation" class="active"><a href="#">Settings</a></li>
			</ul>

		</div>

	</nav>	
</body>

</html>